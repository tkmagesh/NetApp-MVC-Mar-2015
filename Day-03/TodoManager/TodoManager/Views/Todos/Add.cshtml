@using System.Web.UI.WebControls
@model TodoManager.Models.Todo
@{
  
    Layout = "~/Views/Shared/layout.cshtml";
    Dictionary<string, string> errorMessages = ViewBag.ErrorMessages ?? new Dictionary<string, string>(); 
}


@section head
{
    <style>
        .error {
            color: red;
            font-style: italic;
        }
        .field label {
            display: block;
        }
        .input-validation-error {
            border: 1px solid red;
            background-color: lightpink;
        }
    </style>
}

@section content
{
    
    @using(Html.BeginForm())
    {
        <div class="field">
            <label for="txtTodo" >Title :</label>
            @Html.TextBoxFor(m => m.Title)
            @Html.ValidationMessageFor(m => m.Title)    
        </div>
        <div class="field">
            <label for="txtTodo" >Description :</label>
            @Html.TextAreaFor(m => m.Description, new {rows = 10, cols = "40"})

        </div>
        <div class="field">
            <label for="txtTodo" >Target Date :</label>
            @Html.TextBoxFor(m => m.TargetDate, new {type = "date"})
            @Html.ValidationMessageFor(m => m.TargetDate)
        </div>

        <input type="submit" value="Save"/>
    }
    

}
